<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/taiwan"
            android:transitionName="@string/taiwan"
            android:tag="@string/taiwan"
            android:src="@drawable/banner1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:cropToPadding="false"
            android:padding="10dp"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/sanya"
            android:transitionName="@string/sanya"
            android:tag="@string/sanya"
            android:layout_marginBottom="10dp"
            android:src="@drawable/banner2"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:cropToPadding="false"
            />

        <ImageButton
            android:id="@+id/imageButton3"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/chengde"
            android:transitionName="@string/chengde"
            android:tag="@string/chengde"
            android:layout_marginBottom="10dp"
            android:src="@drawable/banner3"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/great_wall"
            android:transitionName="@string/great_wall"
            android:tag="@string/great_wall"
            android:layout_marginBottom="10dp"
            android:src="@drawable/banner4"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:id="@+id/imageButton5"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/chong_cing"
            android:transitionName="@string/chong_cing"
            android:tag="@string/chong_cing"
            android:src="@drawable/banner5"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"/>
        
    </LinearLayout>

</ScrollView>